    int qadprod = 0, produtocad = 0;
    void luna(){
        #ifdef _WIN32
            system("cls");
        #else
            system("clear");
        #endif
    }
    void glitter(){
        float  resultado, resultado2, escpod2, troco, troco1, saldo2;
